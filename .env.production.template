# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values
# NEVER commit the actual .env.production file to version control

# ===========================
# DATABASE CONFIGURATION
# ===========================
# PostgreSQL connection string (Neon or other PostgreSQL provider)
DATABASE_URL="postgresql://[user]:[password]@[host]/[database]?sslmode=require"

# ===========================
# AUTHENTICATION (NextAuth)
# ===========================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-here-min-32-chars"

# Production URL (no trailing slash)
NEXTAUTH_URL="https://your-domain.com"

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================
# ENCRYPTION
# ===========================
# For encrypting API keys in database
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-byte-hex-encryption-key"

# ===========================
# AI PROVIDER API KEYS (Optional)
# ===========================
# These are fallback keys if users don't provide their own
# Leave empty if you want users to always use their own keys

# OpenAI
OPENAI_API_KEY=""

# Anthropic (Claude)
ANTHROPIC_API_KEY=""
CLAUDE_ADMIN_API_KEY=""  # Optional: For organization management

# Google (Gemini)
GOOGLE_AI_API_KEY=""

# X.AI (Grok)
XAI_API_KEY=""

# Mistral
MISTRAL_API_KEY=""

# Perplexity
PERPLEXITY_API_KEY=""

# ===========================
# EMAIL SERVICE (Optional)
# ===========================
# For sending notification emails
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="noreply@your-domain.com"

# ===========================
# MONITORING & ANALYTICS (Optional)
# ===========================
# Sentry for error tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ===========================
# PAYMENT PROCESSING (Optional)
# ===========================
# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ===========================
# SECURITY & RATE LIMITING
# ===========================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS="60000"  # 1 minute
RATE_LIMIT_MAX_REQUESTS="100"

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="https://your-domain.com"

# ===========================
# PERFORMANCE & CACHING
# ===========================
# Redis URL for caching (optional)
REDIS_URL=""

# Prisma connection pool settings
DATABASE_CONNECTION_LIMIT="10"

# ===========================
# FEATURE FLAGS
# ===========================
# Enable/disable features
ENABLE_TEAM_FEATURES="true"
ENABLE_BILLING="true"
ENABLE_AI_CHAT="true"
ENABLE_ANALYTICS="true"

# ===========================
# DEPLOYMENT CONFIGURATION
# ===========================
# Node environment
NODE_ENV="production"

# Port (usually handled by hosting provider)
PORT="3000"

# Build optimization
NEXT_TELEMETRY_DISABLED="1"
ANALYZE="false"

# ===========================
# CDN & ASSETS
# ===========================
# Asset prefix for CDN
NEXT_PUBLIC_ASSET_PREFIX=""

# ===========================
# LOGGING
# ===========================
# Log level: error, warn, info, debug
LOG_LEVEL="info"

# Log destination: console, file, remote
LOG_DESTINATION="console"

# ===========================
# MAINTENANCE MODE
# ===========================
# Set to "true" to enable maintenance mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We're currently performing maintenance. Please check back soon."